{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@components/*": ["./app/components/*"],
      "@providers/*": ["./shared/providers/*"],
      "@theme/*": ["./shared/theme/*"],
      "@queries/*": ["./graphql/queries/*"],
      "@mutations/*": ["./graphql/mutations/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
